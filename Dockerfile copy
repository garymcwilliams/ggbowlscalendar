# check from: https://stackoverflow.com/questions/53835198/integrating-python-poetry-with-docker


FROM python:3.9-slim-buster as base

LABEL maintainer="gary@mc-williams.co.uk"

ENV PYTHONFAULTHANDLER=1 \
    PYTHONHASHSEED=random \
    PYTHONUNBUFFERED=1

WORKDIR /app

RUN addgroup --gid 10001 icalendar && adduser --uid 10000 --system --ingroup icalendar --home /home/icalendar icalendar
RUN chown -R icalendar:icalendar /app

FROM base as builder

ENV PIP_DEFAULT_TIMEOUT=100 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PIP_NO_CACHE_DIR=1 \
    POETRY_VERSION=1.0.0

RUN pip install "poetry==$POETRY_VERSION"

USER icalendar

# poetry --no-root ?
RUN poetry --version
RUN python -m venv /app/venv

COPY pyproject.toml poetry.lock ./
RUN poetry export -f requirements.txt | /app/venv/bin/pip install -r /dev/stdin

COPY --chown=icalendar:icalendar . .
RUN poetry build && /app/venv/bin/pip install dist/*.whl

FROM base as final

COPY --chown=icalendar:icalendar --from=builder /app/venv /app/venv
COPY --chown=icalendar:icalendar docker-entrypoint.sh wsgi.py ./
CMD ["./docker-entrypoint.sh"]

ARG GIT_HASH
ENV GIT_HASH=${GIT_HASH:-dev}
